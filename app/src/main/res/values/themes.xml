<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpDesk10" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/azul800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonCustom">
        <item name="android:backgroundTint">@color/laranja</item>
        <item name="borderRound">11dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="buttonCustom_Cadastro">
        <item name="android:backgroundTint">@color/cinzaEscuro</item>
        <item name="borderRound">11dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="buttonCustom_chamados">
        <item name="android:backgroundTint">@color/azul900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="buttonCustom_chamado">
        <item name="android:backgroundTint">@color/azul900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="buttonCustom_chamado_em_andamento" >
        <item name="android:backgroundTint">@color/azul900</item>
        <item name="android:textColor">@color/vermleho500</item>
        <item name="android:padding">10dp</item>
        <item name="strokeColor">@color/vermleho500</item>
        <item name="strokeWidth">1dp</item>

    </style>

    <style name="buttonCustom_chamado_finalizado">
        <item name="android:backgroundTint">@color/azul900</item>
        <item name="color">@color/vermleho500</item>
        <item name="android:padding">10dp</item>
        <item name="strokeColor">@color/verde100</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>